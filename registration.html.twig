{% extends 'base.html.twig' %}

{% block title %}Créer un membre{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Création d'un nouvel utilisateur</h1>
</div>
<form action="/registration" method="post">
  <fieldset>
	<div class="form-group">
      <label for="exampleInputEmail1">Nom du nouvel utilisateur</label>
      <input type="text" class="form-control" id="nom" name="nom" placeholder="Entrer un nom">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
	<div class="form-group">
      <label for="exampleInputEmail1">Prénom du nouvel utilisateur</label>
      <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Entrer un prenom">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
	<div class="form-group">
      <label for="exampleInputEmail1">Email du nouvel utilisateur</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Entrer un email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
	<div class="form-group">
      <label for="exampleInputEmail1">Password du nouvel utilisateur</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Entrer un mot de passe">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
  </fieldset>
   <button type="submit" class="btn btn-primary">Créer</button>
   <button type="reset" class="btn btn-primary">Annuler</button>
</form>
{% endblock %}
